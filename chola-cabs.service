[Unit]
Description=Chola Cabs FastAPI Backend
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/chola_cabs_backend_dev
Environment="PATH=/root/chola_cabs_backend_dev/venv/bin"
ExecStart=/root/chola_cabs_backend_dev/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
